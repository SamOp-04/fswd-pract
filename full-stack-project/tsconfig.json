{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JavaScript features
    "module": "commonjs",                        // Node.js compatible
    "rootDir": "./src",                          // Source files
    "outDir": "./dist",                          // Compiled output
    "esModuleInterop": true,                     // For importing CommonJS modules
    "forceConsistentCasingInFileNames": true,    // Avoid file name casing issues
    "strict": true,                              // Enable all strict type-checking options
    "skipLibCheck": true,                        // Skip type checking for libraries
    "moduleResolution": "node",                  // Use Node module resolution
    "resolveJsonModule": true,                   // Allow importing JSON files
    "types": ["node", "express"]                 // Type definitions
  },
  "include": ["src"],                            // Include all .ts files in src
  "exclude": ["node_modules", "dist"]            // Exclude compiled files and packages
}